generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int     @id @default(autoincrement())
  name      String
  login     String  @unique
  password  String
  AvatarUrl String?
  days      String
  online    Boolean @default(false)

  messages Message[]
}

model Message {
  id        Int      @id @default(autoincrement())
  content   String
  createdAt DateTime @default(now())
  userId    Int?

  User User? @relation(fields: [userId], references: [id])
}
